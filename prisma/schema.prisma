// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String

  @@map("users")
}

model Categorie {
  id Int @id @default(autoincrement())
  name String @unique

  categories Test[]

  @@map("categories")
}

model Term {
  id Int @id @default(autoincrement())
  number Int @unique

  terms Discipline[]

  @@map("terms")
}

model Teacher {
  id Int @id @default(autoincrement())
  name String @unique

  teachersDisciplines TeacherDiscipline[]

  @@map("teachers")
}

model Discipline {
  id Int @id @default(autoincrement())
  name String @unique
  termId Int
  
  disciplines TeacherDiscipline[]
  terms Term @relation(fields: [termId], references: [id])

  @@map("disciplines")
}

model Test {
  id Int @id @default(autoincrement())
  name String
  pdfUrl String
  categoryId Int
  teacherDisciplineId Int

  category Categorie @relation(fields: [categoryId], references: [id])
  teacherDiscipline TeacherDiscipline @relation(fields: [teacherDisciplineId], references: [id])

  @@map("tests")
}

model TeacherDiscipline {
  id Int @id @default(autoincrement())
  teacherId Int
  disciplineId Int

  teacher Teacher @relation(fields: [teacherId], references: [id])
  discipline Discipline @relation(fields: [disciplineId], references: [id])
  
  teacherDisciplines Test[]

  @@map("teachersDisciplines")
}